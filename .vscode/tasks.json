{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/EngagementOrganizer.API/EngagementOrganizer.API/EngagementOrganizer.API.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/EngagementOrganizer.API/EngagementOrganizer.API/EngagementOrganizer.API.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/src/EngagementOrganizer.API/EngagementOrganizer.API/EngagementOrganizer.API.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "npm_start",
            "type": "npm",
            "script": "start",
            "isBackground": true,
            "presentation": {
              "focus": true,
              "panel": "dedicated"
            },
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "problemMatcher": {
              "owner": "typescript",
              "source": "ts",
              "applyTo": "closedDocuments",
              "fileLocation": [
                "relative",
                "${cwd}"
              ],
              "pattern": "$tsc",
              "background": {
                "activeOnStart": true,
                "beginsPattern": {
                  "regexp": "(.*?)"
                },
                "endsPattern": {
                  "regexp": "Compiled |Failed to compile."
                }
              }
            }
          }
    ]
}