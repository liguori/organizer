      "signAndEditExecutable": false
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Office"
    }
  },
  "private": true,
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.7.0",
    "gulp": "^5.0.0",
    "gulp-replace": "^1.1.4"
  },
  "dependencies": {
    "custom-electron-titlebar": "^4.2.8"
  }
}
